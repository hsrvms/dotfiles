    "edit_predictions": {
        "provider": "zed",
        "disabled_globs": [".env", "ozerpan_ercom_sync/api.py"],
    },
    "show_edit_predictions": false,
    "agent": {
        "default_profile": "ask",
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4-5",
        },
    },
    "theme": "Catppuccin Mocha",
    "icon_theme": "Catppuccin Mocha",
    "vim_mode": true,
    "buffer_font_family": "IosevkaTerm Nerd Font Mono",
    "buffer_font_size": 15,
    "vertical_scroll_margin": 10,
    "base_keymap": "VSCode",
    "relative_line_numbers": "enabled",
    "cursor_blink": false,
    "scrollbar": {
        "show": "never",
    },
    "tab_size": 4,
    "hard_tabs": false,
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false,
    },
    "centered_layout": {
        "left_padding": 0.2,
        "right_padding": 0.2,
    },
    "indent_guides": {
        "enabled": true,
        "active_line_width": 1,
        "line_width": 1,
    },

    "soft_wrap": null,
    "preferred_line_length": 160,
    "tabs": {
        "git_status": true,
        "file_icons": true,
    },
    "buffer_line_height": {
        "custom": 1.4,
    },

    "buffer_font_features": { "calt": false },
    "buffer_font_weight": 300,
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false,
    },
    "current_line_highlight": "none",
    "terminal": {
        "font_family": "IosevkaTerm Nerd Font Mono",
        "font_size": 14,
        "line_height": {
            "custom": 1.4,
        },
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv"],
                "activate_script": "default",
            },
        },
    },
    "vim": {
        // "always": use system clipboard when no register is specified
        // "never": don't use system clipboard unless "+ or "* is specified
        // "on_yank": use system clipboard for yank operations when no register is specified
        "use_system_clipboard": "always",
        // Lets `f` and `t` motions extend across multiple lines
    },
    "project_panel": {
        "auto_fold_dirs": false,
        "entry_spacing": "standard",
    },
    "format_on_save": "off",
    "languages": {
        "C": {
            "format_on_save": "off",
        },
        "CSharp": {
            "format_on_save": "on",
        },
        "JavaScript": {
            "format_on_save": "off",
        },
        "Python": {
            "language_servers": ["pyright", "ruff"],
            "format_on_save": "off",
            "formatter": [
                {
                    "code_action": "source.organizeImports.ruff",
                },
                {
                    "code_action": "source.fixAll.ruff",
                },
                {
                    "language_server": {
                        "name": "ruff",
                    },
                },
            ],
        },
        "Go": {
            "format_on_save": "on",
        },
    },
    "lsp": {
        "gopls": {
            "initialization_options": {
                "hints": {
                    "assignVariableTypes": true,
                    "compositeLiteralFields": true,
                    "compositeLiteralTypes": true,
                    "constantValues": true,
                    "functionTypeParameters": true,
                    "parameterNames": true,
                    "rangeVariableTypes": true,
                },
            },
        },
        "omnisharp": {
            "binary": {
                "path": "/path/to/OmniSharp",
                "arguments": ["optional", "additional", "args", "-lsp"],
            },
        },
        "tailwindcss-language-server": {
            "settings": {
                "classFunctions": ["cva", "cx"],
                "experimental": {
                    "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"],
                },
            },
        },
        "ruff": {
            "initialization_options": {
                "settings": {
                    // Ruff server settings goes here
                    "lineLength": 90,
                    "lint": {
                        "extendSelect": ["I"],
                    },
                },
            },
        },
        "pyright": {
            "settings": {
                "python.analysis": {
                    "diagnosticMode": "workspace",
                    "typeCheckingMode": "off",
                },
                "python": {
                    // "pythonPath": ".venv/bin/python",
                    "venvPath": ".",
                    // "venv": ".venv",
                    "venv": "env",
                },
            },
        },
    },
}
