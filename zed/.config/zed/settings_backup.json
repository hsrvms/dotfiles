  "edit_predictions": {
    "disabled_globs": [".env", "ozerpan_ercom_sync/api.py"]
  },
  "show_edit_predictions": false,
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-thinking"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": "Catppuccin Mocha",
  "vim_mode": true,
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 14,
  "vertical_scroll_margin": 10,
  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "buffer_line_height": {
    "custom": 1.5
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font",
    "font_size": 14,
    "line_height": {
      "custom": 1.5
    }
  },
  "vim": {
    // "always": use system clipboard when no register is specified
    // "never": don't use system clipboard unless "+ or "* is specified
    // "on_yank": use system clipboard for yank operations when no register is specified
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "languages": {
    "C": {
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "jdtls": {
      "initialization_options": {}
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 90,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
